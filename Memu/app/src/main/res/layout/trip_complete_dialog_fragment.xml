<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#EEEEEE"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="#EEEEEE"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:id="@+id/profile_pic"
                android:src="@drawable/dummy_profile_pic"
                android:layout_height="70dp">
            </de.hdodenhof.circleimageview.CircleImageView>
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="-10dp"
                android:visibility="visible"
                android:id="@+id/arrow_left"
                android:layout_marginRight="30dp"
                android:background="@drawable/arrow_left"
                android:layout_height="40dp">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="Thank you\nFor using\nMEMU TODAY!"
            android:textSize="22dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/opensansbold"
            android:textColor="@color/Green"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Here is your trip summary"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingTop="25dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/navisummary"
            android:fontFamily="@font/opensansbold"
            android:textColor="@color/black"
            android:layout_height="80dp">
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="15dp"
            android:elevation="5dp"
            app:cardBackgroundColor="#EEEEEE"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/distance_travelled"
                        android:layout_height="50dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Distance Travelled"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="35km"
                        android:gravity="end"
                        android:id="@+id/distance"
                        android:layout_marginRight="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="14dp"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/opensansbold"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/time_taken"
                        android:layout_height="50dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Time Taken"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="90 Min"
                        android:gravity="end"
                        android:layout_marginRight="15dp"
                        android:id="@+id/time"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="14dp"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/opensansbold"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/amount"
                        android:layout_height="50dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Money Earned/ Spent\n (Carpool/ bike pool):"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="90\nRupees"
                        android:gravity="end"
                        android:layout_marginRight="15dp"
                        android:paddingTop="15dp"
                        android:id="@+id/amount"
                        android:paddingBottom="15dp"
                        android:textSize="14dp"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/opensansbold"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/reputation_coins"
                        android:layout_height="50dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Money Earned/ Spent\n (Carpool/ bike pool):"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="90\nCoins"
                        android:gravity="end"
                        android:layout_marginRight="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="14dp"
                        android:id="@+id/coins"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/opensansbold"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="15dp"
            android:elevation="5dp"
            app:cardBackgroundColor="#EEEEEE"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Rate your Trip"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="25dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/opensansbold"
                    android:textColor="@color/textcolur"
                    android:layout_height="80dp">
                </TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/star_bgratings"
                    android:layout_marginBottom="30dp"
                    android:layout_height="90dp">
                    <RatingBar
                        android:layout_width="320dp"
                        android:numStars="5"
                        android:rating="0.0"
                        android:stepSize="1.0"
                        android:id="@+id/ratings"
                        android:scaleX="0.6"
                        android:layout_marginLeft="-20dp"
                        android:scaleY="0.6"
                        android:theme="@style/RatingBar"
                        android:layout_marginRight="90dp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                    </RatingBar>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="3"
                        android:fontFamily="@font/opensansextrabold"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">

                    </TextView>
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>