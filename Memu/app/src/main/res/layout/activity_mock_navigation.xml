<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapbox_cameraZoom="14"
        app:mapbox_uiAttribution="false"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ride_info"
        android:visibility="visible"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="7dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="35dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:id="@+id/profile_pic"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/dummy_profile_pic"
                        android:layout_height="60dp">

                    </ImageView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:shadowColor="#000"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="50"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="30dp"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/name"
                                android:text="Teju"
                                android:textSize="14dp"
                                android:layout_height="wrap_content">

                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/occupation"
                                android:textSize="14dp"
                                android:visibility="gone"
                                android:text="Developer"
                                android:layout_height="wrap_content">

                            </TextView>
                        </LinearLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="60dp"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:id="@+id/routell"
                                    android:visibility="gone"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:id="@+id/route_percent"
                                        android:text="100%"
                                        android:textSize="12dp"
                                        android:layout_height="wrap_content">

                                    </TextView>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Route"
                                        android:textSize="12dp"
                                        android:layout_height="wrap_content">
                                    </TextView>
                                </LinearLayout>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_height="40dp"
                                    android:background="@color/soft_grey" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_width="40dp"
                                        android:textAlignment="center"
                                        android:id="@+id/matching_buddy_time"
                                        android:textSize="12dp"
                                        android:layout_height="wrap_content">
                                    </TextView>

                                </LinearLayout>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_height="40dp"
                                    android:background="@color/soft_grey" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:id="@+id/pay_ll"
                                    android:visibility="gone"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:id="@+id/amount_to_pay"
                                        android:textSize="12dp"
                                        android:layout_height="wrap_content">
                                    </TextView>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:textSize="12dp"
                                        android:layout_height="wrap_content">
                                    </TextView>

                                </LinearLayout>

                            </LinearLayout>

                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/request"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="10dp"
                                android:text="Coins"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/coins"
                                android:textSize="10dp"
                                android:text="50"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content">
                            </TextView>

                        </LinearLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </FrameLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:background="@color/White"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Also joining us "
                    android:layout_height="wrap_content">
                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="25dp"
                    android:id="@+id/matched_buddies"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/endButton"
        android:layout_marginBottom="100dp"
        android:background="@drawable/end_ride_bg"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/opensansregular"
            android:text="End Ride"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>
    <com.iapps.libs.views.LoadingCompound
        android:id="@+id/ld"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="80dp"
        android:visibility="visible"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="150dp"
        android:orientation="vertical"
        android:id="@+id/showRideInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/alert_bottom_img"
            android:layout_height="80dp">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="80dp"
        android:visibility="visible"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        android:id="@+id/alert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/alert_bottom_img"
            android:layout_height="80dp">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/White"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/Navy"
            android:id="@+id/duration_left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/current_time"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="17dp"
                android:id="@+id/dist_left"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

    </LinearLayout>
    <com.mapbox.services.android.navigation.ui.v5.instruction.InstructionView
        android:layout_width="match_parent"
        android:id="@+id/instructionView"
        android:layout_height="match_parent">
    </com.mapbox.services.android.navigation.ui.v5.instruction.InstructionView>
    <ImageView
        android:layout_width="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:id="@+id/arrow_left"
        android:layout_marginRight="30dp"
        android:background="@drawable/arrow_left"
        android:layout_height="40dp">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/navigation"
        android:id="@+id/recenture"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:text="Recenture"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:layout_height="40dp">
    </TextView>
</FrameLayout>