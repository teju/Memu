<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapbox_cameraZoom="14"
        app:mapbox_uiAttribution="false"/>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_gravity="bottom"
        android:id="@+id/endButton"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/end_ride_bg"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:id="@+id/txtendbtn"
            android:fontFamily="@font/opensansregular"
            android:text="End Ride"
            android:textColor="@color/White"
            android:textSize="14dp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>
    <com.iapps.libs.views.LoadingCompound
        android:id="@+id/ld"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="80dp"
        android:visibility="visible"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        android:id="@+id/alert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/alert_bottom_img"
            android:layout_height="80dp">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/White"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/Navy"
            android:id="@+id/duration_left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/current_time"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="17dp"
                android:id="@+id/dist_left"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

    </LinearLayout>
    <com.mapbox.services.android.navigation.ui.v5.instruction.InstructionView
        android:layout_width="match_parent"
        android:id="@+id/instructionView"
        android:layout_height="match_parent">
    </com.mapbox.services.android.navigation.ui.v5.instruction.InstructionView>
    <ImageView
        android:layout_width="90dp"
        android:layout_gravity="end"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:id="@+id/thumb_up_memu_logo"
        android:src="@drawable/thumb_up_memu_logo"
        android:layout_height="wrap_content">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/navigation"
        android:id="@+id/recenture"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:text="Recenture"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:layout_height="40dp">
    </TextView>
</FrameLayout>