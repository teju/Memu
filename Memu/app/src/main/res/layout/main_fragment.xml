<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/soft_transparent_grey"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/memu_login"
                android:scaleType="fitXY"
                android:layout_height="450dp">
            </ImageView>
            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/theme_rounded_rectangle"
                android:id="@+id/sign_up"
                android:fontFamily="@font/opensansregular"
                android:text="Sign-up"
                android:textColor="@color/White"
                android:backgroundTint="@color/Orange"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/theme_rounded_rectangle"
                android:id="@+id/login"
                android:fontFamily="@font/opensansregular"
                android:text="Sign-in if already registered"
                android:textColor="@color/White"
                android:backgroundTint="@color/DeepSkyBlue"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
            </Button>
            <com.facebook.login.widget.LoginButton
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/theme_rounded_rectangle"
                android:id="@+id/fblogin"
                android:fontFamily="@font/opensansregular"
                android:text="FaceBook Login"
                android:textColor="@color/White"
                android:minHeight="50dp"
                android:visibility="visible"
                android:backgroundTint="@color/DarkBlue"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
            </com.facebook.login.widget.LoginButton>
            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/theme_rounded_rectangle"
                android:id="@+id/btnfblogin"
                android:fontFamily="@font/opensansregular"
                android:text="FaceBook Login"
                android:textColor="@color/White"
                android:minHeight="50dp"
                android:visibility="gone"
                android:backgroundTint="@color/DarkBlue"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>

    </ScrollView>
    <com.iapps.libs.views.LoadingCompound
        android:id="@+id/ld"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone" />

</RelativeLayout>