<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#EEEEEE"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.iapps.libs.views.LoadingCompound
            android:id="@+id/ld"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:clickable="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <include layout="@layout/profile_header">
            </include>
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/in_your_city"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content">
            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/memu_happygolucky"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Your Earnings\n&amp; Level"
                    android:textColor="#1A73E8"
                    android:layout_marginLeft="25dp"

                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/earnings"
                    android:layout_gravity="end"
                    android:layout_marginLeft="30dp"
                    android:layout_height="80dp">

                </ImageView>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/user_ranking_header"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:padding="25dp"
                android:background="@drawable/user_coins_and_level"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Total Reputation\nCoins Earned"
                        android:textColor="#606060"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/opensansbold"
                        android:textSize="18dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:layout_alignParentRight="true"
                        android:textColor="#FF9300"
                        android:id="@+id/reputation_coins"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/opensansbold"
                        android:textSize="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content">
                    </TextView>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Your Level"
                        android:textColor="#606060"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/opensansbold"
                        android:textSize="18dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="00"
                        android:layout_alignParentRight="true"
                        android:textColor="#FF9300"
                        android:id="@+id/levels"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/opensansbold"
                        android:textSize="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content">
                    </TextView>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Top Earners\nthis week"
                    android:textColor="#1A73E8"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ranking"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content">

                </ImageView>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/ranking_header"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">
            </ImageView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:background="@drawable/rectangle_city"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Top 3 in Friends &amp; Family"
                            android:textColor="#606060"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/opensansbold"
                            android:textSize="18dp"
                            android:layout_height="wrap_content">
                        </TextView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:id="@+id/friends_rv"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                </FrameLayout>
                <ImageView
                    android:layout_width="70dp"
                    android:src="@drawable/myfriends"
                    android:layout_marginBottom="-170dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="0dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="70dp">

                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:background="@drawable/rectangle_city"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Top 3 In your City"
                            android:textColor="#606060"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/opensansbold"
                            android:textSize="18dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:id="@+id/city_rv"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                </FrameLayout>
                <ImageView
                    android:layout_width="60dp"
                    android:src="@drawable/city_img"
                    android:layout_marginBottom="-240dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="60dp">

                </ImageView>

            </RelativeLayout>

            <include layout="@layout/referral_details_page_two"></include>
            <include layout="@layout/referral_details_page_three"></include>
            <include layout="@layout/referral_details_fragment_four"></include>
        </LinearLayout>

    </FrameLayout>
</ScrollView>