<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FAFAFA"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:src="@drawable/general_setting"
                    android:layout_height="60dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="General Settings"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/settingsmainbg"
                android:layout_marginTop="15dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="My Account"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensanssemibold"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Name:"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Gender:"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Mobile:"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Personal email:"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Work email:"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Home address:"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Office address:"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Driving License:"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:src="@drawable/vehiclesettings"
                    android:layout_height="60dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Vehicle Settings"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/settingsmainbg"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/DeepSkyBlue"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="My Vehicles"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensanssemibold"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Whiteboard"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                </RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Yellowboard"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                </RadioButton>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Registration:"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Type:"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Brand:"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Model:"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/settingsmainbg"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#ABDFF9"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Add another Vehicle"
                    android:textColor="@color/textcolur"
                    android:fontFamily="@font/opensanssemibold"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>