<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/profile_header">
            </include>
            <FrameLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="My Followers list"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@color/DarkBlue"
                    android:fontFamily="@font/opensansbold"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp"
                    android:id="@+id/tvTxt1"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/imgRight"
                    android:src="@drawable/notificationsmain"
                    android:layout_height="wrap_content">
                </ImageView>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="People who follow me:"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvfollowtxt"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/DarkBlue"
                    android:fontFamily="@font/opensanssemibold"
                    android:layout_marginRight="20dp"
                    android:textSize="16dp"
                    android:layout_height="wrap_content">
                </TextView>
                <View
                    android:layout_width="180dp"
                    android:id="@+id/v1"
                    android:background="@color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_height="0.5dp">

                </View>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/followers"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="200dp"
                    android:text="People I Follow:"
                    android:id="@+id/txtfollow"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/DarkBlue"
                    android:fontFamily="@font/opensanssemibold"
                    android:textSize="16dp"
                    android:layout_height="wrap_content">
                </TextView>
                <View
                    android:layout_width="130dp"
                    android:background="@color/black"
                    android:id="@+id/v2"
                    android:layout_marginLeft="20dp"
                    android:layout_height="0.5dp">

                </View>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/me_followers"
                    android:visibility="visible"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"/>
            </LinearLayout>

        </LinearLayout>
        <com.iapps.libs.views.LoadingCompound
            android:id="@+id/ld"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:clickable="true"
            android:visibility="gone" />
    </FrameLayout>
</androidx.core.widget.NestedScrollView>