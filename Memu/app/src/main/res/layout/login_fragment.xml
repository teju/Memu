<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/soft_transparent_grey"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/sign_in_group"
                android:scaleType="fitXY"
                android:layout_height="350dp">
            </ImageView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:id="@+id/rl"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="30dp"
                            android:fontFamily="@font/opensansbold"
                            android:text="Awesome!"
                            android:textColor="@color/DarkBlue"
                            android:id="@+id/tv2"
                            android:layout_below="@+id/memu_logo"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="30dp"
                            android:fontFamily="@font/opensanssemibold"
                            android:text="Good to have you back"
                            android:textColor="@color/DarkBlue"
                            android:layout_below="@+id/tv2"
                            android:layout_height="wrap_content">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="20dp"
                            android:fontFamily="@font/opensansregular"
                            android:layout_marginTop="10dp"
                            android:text="Sign-in with your mobile number"
                            android:textColor="@color/DarkBlue"
                            android:id="@+id/tv3"
                            android:layout_below="@+id/tv2"
                            android:layout_height="wrap_content">
                        </TextView>
                        <EditText
                            android:layout_width="match_parent"
                            android:hint="Mobile Number"
                            android:paddingTop="7dp"
                            android:layout_marginRight="20dp"
                            android:textSize="15dp"
                            android:maxLength="10"
                            android:inputType="number"
                            android:fontFamily="@font/opensansregular"
                            android:imeOptions="actionNext"
                            android:layout_toRightOf="@+id/right_light_2"
                            android:id="@+id/mobileNo"
                            android:layout_below="@+id/tv3"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:background="@color/soft_grey"
                            android:paddingBottom="7dp"
                            android:layout_height="50dp">
                        </EditText>

                        <EditText
                            android:layout_width="match_parent"
                            android:hint="OTP Number"
                            android:id="@+id/otp_number"
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            android:paddingTop="7dp"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="15dp"
                            android:visibility="gone"
                            android:layout_marginRight="20dp"
                            android:layout_toRightOf="@+id/right_light_2"
                            android:layout_below="@+id/get_otp"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:background="@color/soft_grey"
                            android:paddingBottom="7dp"
                            android:layout_height="50dp">
                        </EditText>
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/get_otp"
                            android:visibility="gone"
                            android:fontFamily="@font/opensansregular"
                            android:text="Resend OTP"
                            android:paddingTop="3dp"
                            android:paddingLeft="15dp"
                            android:layout_below="@+id/er_mtv1"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="10dp"
                            android:id="@+id/er_mtv3"
                            android:fontFamily="@font/opensansregular"
                            android:paddingLeft="15dp"
                            android:textColor="@color/Red"
                            android:visibility="gone"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <ImageView
                android:layout_width="200dp"
                android:src="@drawable/thumb_up_memu_logo"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="end"
                android:id="@+id/memu_logo"
                android:layout_height="70dp">
            </ImageView>
            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_button"
                android:id="@+id/login"
                android:textAllCaps="false"
                android:fontFamily="@font/opensanssemibold"
                android:textSize="20dp"
                android:text="Sign-in"
                android:textColor="@color/White"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
            </Button>

        </LinearLayout>

    </ScrollView>
    <com.iapps.libs.views.LoadingCompound
        android:id="@+id/ld"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone" />

</RelativeLayout>