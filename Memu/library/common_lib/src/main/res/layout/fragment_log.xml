<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/LLHeader"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/soft_transparent_grey"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnMenu"
            style="@style/textMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:layout_marginLeft="10dp"
            android:textColor="@color/Black"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/textMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="OFF"
                android:layout_marginRight="10dp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/scOnOffLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/textMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="ON"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnCloseLog"
            style="@style/textMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_marginRight="10dp"
            android:textColor="@color/Black"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LLFirst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LLHeader"
        android:orientation="vertical">
        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:cacheColorHint="@color/transparent"
            android:clipToPadding="false"
            android:divider="@drawable/divider_inset"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:listSelector="@drawable/selectable_background"
            android:fastScrollEnabled="true"
            android:background="@color/white" >
        </ListView>


        <TextView
            android:id="@+id/tvFilterBy"
            style="@style/textMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/Blue"
            android:background="@color/white"/>

    </LinearLayout>


    <ScrollView
        android:id="@+id/SVLogDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="50dp">


                <TextView
                    android:id="@+id/tvInfoClose"
                    style="@style/textMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tap to close"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:textColor="@color/Black"/>


                <Button
                    android:id="@+id/btnClose"
                    style="@style/textMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap to close"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/Black"/>

                <Button
                    android:id="@+id/btnAPIToolkit"
                    style="@style/textMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="API Toolkit"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/Black"/>

                <Button
                    android:id="@+id/btnJSONViewer"
                    style="@style/textMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JSON Viewer"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/Black"/>

                <Button
                    android:id="@+id/btnSendEmail"
                    style="@style/textMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email This Report"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/Black"/>


                <TextView
                    style="@style/textMedium"
                    android:id="@+id/tvDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/Black"
                    android:textIsSelectable="true"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    </ScrollView>


    <TextView
        android:layout_below="@+id/LLHeader"
        android:id="@+id/tvLoading"
        style="@style/textLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/white"
        android:textColor="@color/Black"
        android:text="Loading..."/>

</RelativeLayout>